<div>
  <% if flash[:errors] %>
    <% flash[:errors].each do |message| %>
      <div><%= message %></div>
    <% end %>
  <% end %>

  <%= form_for post do |f| %>
    <label for="title">
      Title: <%= f.text_field :title %>
    </label>

    <br />

    <% categories.each do |id, category| %>
      <%= check_box_tag 'post[category_ids][]', category, post.category_names.include?(category) %> <%= category %>
    <% end %>

    <br />
    
    Content: <br/>
    <%= f.text_area :content, rows: 25, cols: 100 %>

    <br />

    <%= f.submit %>
  <% end %>
</div>